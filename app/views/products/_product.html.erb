<% if products.empty? %>
 No products to display! 
  <% if user_signed_in? %>
    <% if current_user.first_name =="edmr" && current_user.last_name =="admin" %>
     <%= link_to 'New Product', new_product_path %><br>
    <%end%>
 <%end%>
<% else %>
  <table class="table table-striped">
    <tbody>    
     <% products.each do |product| %>
         <tr>
      <th>Title</th>
      <th>Price</th>
      <th>image</th>
      <th colspan="4"></th>
    </tr>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= image_tag product.image.url( :thumb) %></td>
        <td><%= link_to 'Show', product %></td>
          <% if user_signed_in? %>
          <% if current_user.first_name =="edmr" && current_user.last_name =="admin" %>
            <h3><td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td></h3>
            
          <%end%>
        <%end%>
        </tr>
      <% end %>
    </tbody>
 </table>
<% end %>